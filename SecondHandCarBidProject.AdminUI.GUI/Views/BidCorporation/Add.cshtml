@using SecondHandCarBidProject.AdminUI.DTO
@model BidCorporationAddViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>İhale-Şirket Ekleme</h4>
    <span class="tooltiptext">Bu sayfa admin için gereklidir. İhalelere bağlı şirketler buradan eklenebilir.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="Add" method="post">
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>
        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">İhale Listesi</label>
                <select class="form-select" asp-for="BidId" asp-items="@Model.BidList" placeholder="Seçiniz">
                </select>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Şirket Listesi</label>
                <select class="form-select" asp-for="CorporationId" asp-items="@Model.CorporationList" placeholder="" placeholder="Seçiniz">
                </select>
            </div>
        </div>
    </form>
</div>