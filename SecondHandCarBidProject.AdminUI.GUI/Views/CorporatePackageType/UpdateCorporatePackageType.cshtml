@using SecondHandCarBidProject.AdminUI.DTO
@using SecondHandCarBidProject.AdminUI.GUI.ViewModels
@model CorporatePackageTypeUpdateViewModels

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>Şirketler İçin Paket Tipi Güncelleme Ekranı</h4>
    <span class="tooltiptext">Şirketler İçin Paket Tipi Güncelleme İşlemleri Bu Sayfada Yapılır.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="UpdateCorporatePackageType" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>

    <div class="row text-center p-2">

        <div class="col-12 col-md-4 form-group">
            <label class="fw-bold text-dark">Paket Adı</label>
                <select class="form-select" asp-for="Id"@* asp-items="@Model.PackageName"*@>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
        </div>


        <div class="col-12 col-md-4 form-group">
            <label class="fw-bold text-dark">
                İhale Sayısı
            </label>
                <input type="number" class="form-control" asp-for="CountOfBids" value="@Model.CountOfBids" placeholder="">
                <span asp-validation-for="CountOfBids" class="text-danger"></span>
        </div>

    </div>
</div>
