@using SecondHandCarBidProject.AdminUI.DTO
@model CarBuyUpdateViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>Satış Güncelleme</h4>
    <span class="tooltiptext">Bu sayfa admin için gereklidir. Satış buradan güncellenebilir.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="Update" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="CarId" value="@Model.CarId" />
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Ekleyen Kullanıcı</label>
                <input type="text" class="form-control" asp-for="UserFullName" value="@Model.UserFullName" disabled>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Durum</label>
                <select class="form-select" asp-for="StatusId" asp-items="@Model.StatusList">
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Ön Değerleme Fiyatı</label>
                <input type="number" class="form-control" asp-for="PreValuationPrice" value="@Model.PreValuationPrice">
                <span asp-validation-for="PreValuationPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Teklif Fiyatı</label>
                <input type="number" class="form-control" asp-for="BidPrice">
                <span asp-validation-for="BidPrice" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Marka Listesi</label>
                <select class="form-select" asp-for="CarBrandId" asp-items="@Model.BrandList"disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="CarBrandId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Model Listesi</label>
                <select class="form-select" asp-for="CarModelId" asp-items="@Model.ModelList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="CarModelId" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Gövde Tipi</label>
                <select class="form-select" asp-for="BodyTypeId" asp-items="@Model.BodyTypeList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="BodyTypeId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Yakıt Tipi</label>
                <select class="form-select" asp-for="FuelTypeId" asp-items="@Model.FuelTypeList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="FuelTypeId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Vites Tipi</label>
                <select class="form-select" asp-for="GearTypeId" asp-items="@Model.GearTypeList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="GearTypeId" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Versiyon</label>
                <select class="form-select" asp-for="VersionId" asp-items="@Model.VersionList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="VersionId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Renk</label>
                <select class="form-select" asp-for="ColorId" asp-items="@Model.ColorList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Araç Yılı</label>
                <select class="form-select" asp-for="CarYear" placeholder="Seçiniz" disabled>
                    @for (int i = DateTime.Now.Year; i > 1950; i--)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="CarYear" class="text-danger"></span>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Kilometre</label>
                <input type="number" class="form-control" asp-for="Kilometre" disabled>
                <span asp-validation-for="Kilometre" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Opsiyonel Donanım</label>
                <select class="form-control" multiple asp-for="OptionalHardwareIds" asp-items="@Model.OptionalHardwareList" disabled>
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="OptionalHardwareIds" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Fotoğraf Ekle</label>
                <input class="form-control" type="file" asp-for="CarImages" accept="image/png, image/jpeg" multiple disabled>@*TODO how to actually show images that came from database*@
                <span asp-validation-for="CarImages" class="text-danger"></span>                                             @*And figure out which ones are replaced*@
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Açıklama</label>
                <textarea class="form-control" rows="3" asp-for="CarDescription" disabled>@Model.CarDescription</textarea>
                <span asp-validation-for="CarDescription" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>