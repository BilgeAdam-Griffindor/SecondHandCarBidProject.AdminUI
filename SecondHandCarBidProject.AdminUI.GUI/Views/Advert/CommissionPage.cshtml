@using SecondHandCarBidProject.AdminUI.DTO
@model ExampleDTO

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
<form>
   <div class="container overflow-hidden" style="margin-top:50px;">
        <h4>Noter ve Komisyon Bilgileri</h4>
        <div class="row text-center p-2">
            <div class="p-3 border bg-light text-justify">
                <div class="row text-center p-2">
                    <label class="fw-bold text-dark">Bireysel Müşteriler İçin Komisyon Tutarı : </label>
                    <p class="text-lowercase">Kurumsal müşteriler için komisyon ve noter ücreti hesaplanmamaktadır.</p>
                </div>
                <br />
                <br />

                <div class="row text-center p-2">
                    <label class="fw-bold text-dark">Bireysel Müşteriler İçin Komisyon Tutarı : </label>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="mintutar">Minimum Tutarı Girin</label>
                        <input type="number" class="form-control" id="mintutar" placeholder="Tutar Giriniz">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="makstutar">Maksimum Tutarı Girin</label>
                            <input type="number" class="form-control" id="makstutar" placeholder="Tutar Giriniz">
                    </div>
                    <div class="input-group mb-3">
                        <button class="btn btn-outline-secondary" type="button" id="button-addon1">Hesapla</button>
                        <input type="text" class="form-control" placeholder="Hesaplayınız" aria-label="Example text with button addon" aria-describedby="button-addon1">
                    </div>
                </div>

                <div class="row text-center p-2">
                    <label class="fw-bold text-dark">Bireysel Müşteriler İçin Noter Tutarı : </label>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="mintutar">Minimum Tutarı Girin</label>
                            <input type="number" class="form-control" id="mintutar" placeholder="Tutar Giriniz">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="makstutar">Maksimum Tutarı Girin</label>
                            <input type="number" class="form-control" id="makstutar" placeholder="Tutar Giriniz">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="mintutar">Başlangıç Tarihini Girin</label>
                        <input type="datetime-local" class="form-control" id="mintutar">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="fw-bold text-dark" for="makstutar">Bitiş Tarihini Girin</label>
                            <input type="datetime-local" class="form-control" id="makstutar">
                    </div>
                    <div class="input-group mb-3">
                        <button class="btn btn-outline-secondary" type="button" id="button-addon1">Hesapla</button>
                        <input type="text" class="form-control" placeholder="Hesaplayınız" aria-label="Example text with button addon" aria-describedby="button-addon1">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-end m-2 mb-2">
        <div class="col align-self-end">
            <button class=" m-2 p-2 button-29">KAYDET</button>
            <button class=" m-2 p-2 button-29">Geri</button>

        </div>
    </div>
</form>
</div>
