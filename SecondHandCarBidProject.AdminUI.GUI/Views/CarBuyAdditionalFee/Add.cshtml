@using SecondHandCarBidProject.AdminUI.DTO
@model CarBuyAdditionalFeeAddViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>Satışa Ek Ücret Ekleme</h4>
    <span class="tooltiptext">Bu sayfa admin için gereklidir. Satışlar için ek ücret buradan eklenebilir.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="Add" method="post">
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Satış Listesi</label>
                <select class="form-select" asp-for="CarBuyId" asp-items="@Model.CarBuyList">
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="CarBuyId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Noter Ücreti</label>
                <select class="form-select" asp-for="NotaryFeeId" asp-items="@Model.NotaryFeeList">
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="NotaryFeeId" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Komisyon Ücreti</label>
                <select class="form-select" asp-for="CommissionFeeId" asp-items="@Model.CommissionFeeList">
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="CommissionFeeId" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>