@using SecondHandCarBidProject.AdminUI.DTO
@model BidOfferUpdateViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>İhale Teklif Güncelleme</h4>
    <span class="tooltiptext">Bu sayfa admin için gereklidir. İhalelere verilen teklifler buradan güncellenebilir.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>

        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">İhale Listesi</label>
                <select class="form-select" asp-for="BidId" asp-items="@Model.BidList" placeholder="Seçiniz">
                </select>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Teklif Verecek Kullanıcı</label>
                <select class="form-select" asp-for="BaseUserId" asp-items="@Model.BaseUserList" placeholder="Seçiniz">
                </select>
            </div>
        </div>
        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Teklif Miktarı</label>
                <input type="text" class="form-control" asp-for="OfferAmount" value="@Model.OfferAmount">
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Açıklama</label>
                <textarea class="form-control" rows="3" asp-for="Explanation">@Model.Explanation</textarea>
            </div>
        </div>
    </form>
</div>