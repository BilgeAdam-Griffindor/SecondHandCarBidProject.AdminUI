@using SecondHandCarBidProject.AdminUI.DTO
@using SecondHandCarBidProject.AdminUI.GUI.ViewModels
@model NotificationMessageAddViewModels
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="tooltip">
    <h4><i class="fa-solid fa-lg fa-circle-info"></i>Bildirim Mesajları Ekleme Ekranı</h4>
    <span class="tooltiptext">Bildirim Mesajları Bu Sayfada Eklenir.</span>
</div>
<div class="mt-2 p-3" style="box-shadow:  6px 20px 40px #000000;border-radius:10px ">
    <form asp-action="AddNotificationMessage" method="post">
        <h3 style="text-align:center; color:#002244;font-weight:bold;" class="m-2 p-2 big-title-color">Bildirim Mesajları Ekleme Ekranı </h3>
        <div class="row text-center p-2">
            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Mesaj İçeriği</label>
                <input type="number" class="form-control" asp-for="Content" value="@Model.Content" placeholder="">
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-4">
                <label class="fw-bold text-dark">
                    Düzenlenme Tarihi
                </label>
                <input type="number" class="form-control" asp-for="ModifiedDate" value="@Model.ModifiedDate" placeholder="">
                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4 form-group">
                <label class="fw-bold text-dark">Düzenleme Yapan Kişi</label>
                <select class="form-select" asp-for="ModifiedBy" asp-items="@Model.ModifiedByList">
                    <option value="">--Seçiniz--</option>
                </select>
                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-end m-2 mb-2">
            <div class="col align-self-end">
                <button class=" m-2 p-2 button-29">KAYDET</button>
            </div>
        </div>
    </form>
</div>