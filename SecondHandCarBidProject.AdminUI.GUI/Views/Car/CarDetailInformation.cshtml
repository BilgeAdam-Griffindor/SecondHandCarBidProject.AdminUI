@using SecondHandCarBidProject.AdminUI.DTO
@model CarDetailAddDto

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<form>
    <div class="container overflow-hidden" style="margin-top:50px;">

        <h4>Araç Detay Bilgileri</h4>
        <div class="row gy-8">

            <div class="col-12">
                <div class="p-3 border bg-light text-justify">
                    <div class="row text-center">
                        <div class="col">
                            <label class="fw-bold text-dark">Bireysel/Kurumsal</label>

                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Kurumsal Şirket Adı</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Statü</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Araç Fiyat</label>
                            <input type="text" class="form-control" />
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="p-3 border bg-light text-justify">
                    <div class="row">
                        <div class="col">
                            <label class="fw-bold text-dark">Araç Marka</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Araç Model</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Gövde Tipi</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label class="fw-bold text-dark">Yıl</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Yakıt Tipi</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Vites Tipi</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label class="fw-bold text-dark">Versiyon</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Km Bilgisi</label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            <label class="fw-bold text-dark">Renk </label>
                            <select class="form-control" asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label class="fw-bold text-dark">Donanım</label>
                            <select class="form-control" multiple asp-for="BireyselKurumsalId" asp-items="@Model.BireyselKurumsalListe"></select>
                        </div>
                        <div class="col">
                            Boş
                        </div>
                        <div class="col">
                            Boş
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="p-3 border bg-light">
                    <label class="fw-bold text-dark">Fotoğraf Ekle</label>
                    <input class="form-control" type="file" id="formFileMultiple" multiple>
                </div>
            </div>
            <div class="col-6">
                <div class="p-3 border bg-light">
                    <label class="fw-bold text-dark">Açıklama</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
            </div>
            <div class="col-12">
                <div class="p-3 border bg-light">
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary car-detail-button" data-toggle="modal" data-target="#exampleModal2" data-whatever="mdo">Hemen Satın Al</a>
                        </div>
                        <div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title bg-dark" id="exampleModalLabel">Hemen Satın AL</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body bg-danger">
                                        <form>
                                            <label for="ilanbaslik" class="col-form-label">Hemen satın al talebiniz admine iletilecektir. Onaylıyor musunuz?</label>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal Et</button>
                                        <button type="button" class="btn btn-primary">TALEBİMİ İLET</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                       
                        <div class="col">
                            <a class="btn btn-primary car-detail-button">Komisyon</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary car-detail-button">Alıcı Bilgileri</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary car-detail-button">Araç Tarihçe</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary car-detail-button">Hasar Tramer Bilgileri</a>
                        </div>
                        <div class="col">
                            <a class="btn btn-primary car-detail-button" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">İlan Bilgileri</a>
                        </div>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title bg-dark" id="exampleModalLabel">İlan Bilgileri</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="form-group bg-dark">
                                                <label for="ilanbaslik" class="col-form-label">İlan Başlık</label>
                                                <input type="text" class="form-control" id="ilanbaslik">
                                            </div>
                                            <div class="form-group bg-dark">
                                                <label for="ilanaciklama" class="col-form-label">İlan Açıklama</label>
                                                <textarea class="form-control" id="ilanaciklama"></textarea>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Geri</button>
                                        <button type="button" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <a class="btn btn-success car-detail-button">Kaydet</a>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</form>