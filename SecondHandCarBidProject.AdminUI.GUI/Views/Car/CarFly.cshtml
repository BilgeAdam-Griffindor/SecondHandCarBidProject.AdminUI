@using SecondHandCarBidProject.AdminUI.DTO.CarDetailDtos

@model CarListDTO
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var a = ViewBag.cartype;
}

<div class=" p-3" style="margin-top:50px;box-shadow: 6px 15px 30px #575757; background-color:#ffff ">
    <h2 style="text-align:center; color:#002244;font-weight:bold">Araç Bilgileri</h2>
    <div class="row text-center p-2">

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    @foreach (var item in @Model.GetType().GetProperties().ToList())
                    {
                        foreach (var itemdto in item.GetValue(Model).GetType().GetProperties().ToList())
                        {
                            <td>@itemdto.Name</td>
                        }
                    }
                </tr>
               
            </thead>
            <tbody>
                <tr>
                    @foreach (var item in @Model.GetType().GetProperties().ToList())
                    {
                        foreach (var itemdto in item.GetValue(Model).GetType().GetProperties().ToList())
                        {
                            <td>@itemdto.GetValue(item.GetValue(Model))</td>
                        }
                    }
                </tr>
               
              
            </tbody>
        </table>
        <div class="row justify-content-end m-2">
            <div class="col align-self-end">
                <input type="submit" value="Araç Ekle" class="btn btn-primary m-2 p-2" />
                <input type="submit" value="Kaydet" class="btn btn-success m-2 p-2" />
            </div>

        </div>

    </div>


</div>