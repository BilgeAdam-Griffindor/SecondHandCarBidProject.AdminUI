@using SecondHandCarBidProject.AdminUI.GUI.ViewModels
@model CarListViewModel
@{
    Layout = null;
}

<form asp-action="Index" method="post">
    Araç Marka:
    <select asp-for="BrandId" asp-items="@Model.BrandList">
        <option value="@null">Boş</option>
    </select>
    Araç Model:
    <select asp-for="ModelId" asp-items="@Model.ModelList">
        <option value="@null">Boş</option>
    </select>
    Statü:
    <select asp-for="StatusId" asp-items="@Model.StatusList">
        <option value="@null">Boş</option>
    </select>
    <br />
    <input type="submit" value="Listele" />
</form>
<br />
<br />
<div class="p-3" style="margin-top:50px;box-shadow: 6px 15px 30px #575757; background-color:#ffff ">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Araç Id</th>
                <th style="padding-left:1rem">Araç Marka</th>
                <th style="padding-left:1rem">Araç Model</th>
                <th style="padding-left:1rem">Statü</th>
                <th style="padding-left:1rem">Kaydeden Kullanıcı</th>
                <th style="padding-left:1rem">Kaydetme Zamanı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CarTableRows)
            {
                <tr>
                    <td>@item.CarId</td>
                    <td style="padding-left:1rem">@item.CarBrandName</td>
                    <td style="padding-left:1rem">@item.CarModelName</td>
                    <td style="padding-left:1rem">@item.Status</td>
                    <td style="padding-left:1rem">@item.UserName</td>
                    <td style="padding-left:1rem">@item.RegisterDate</td>
                    <td style="padding-left:1rem">
                        <a asp-action="UpdateCar" asp-route-carId="@item.CarId">Güncelle</a>
                    </td>
                    <td style="padding-left:1rem">
                        <a asp-action="Delete Car" asp-route-carId="@item.CarId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>